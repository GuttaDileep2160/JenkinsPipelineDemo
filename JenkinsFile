pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello welcome to Jenkins'
                echo 'trigger the build automatically using polling of jenkins'
            }
        }
        stage('Build') {
            steps {
                echo 'Bulilding the project'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing the project'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the project'
            }
        }
        stage('Release') {
            steps {
                echo 'Releasig the project'
            }
        }
    }
}
